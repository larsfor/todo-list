<%= turbo_frame_tag todo do %>
  <div id="<%= dom_id todo %>">
    <p>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-10">
            <h5>Todo: <strong><%= todo.action %></strong> </h5> 
            <hr>
            <div>
              <strong>Task:</strong> 
              <p>
                <%= todo.description %>
              </p>
            </div>
            </div>

            <div class="col-md-2">
              <div class="d-grid gap-2">
                  <%= button_to "Delete", todo, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger", style: "width: 100%;" %>
                  <%= link_to "Edit", edit_todo_path(todo), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </p>
  </div>
<hr>
<% end %>
