<p style="color: green"><%= notice %></p>

<% content_for :title, "Todos" %>

<h1>Todos</h1>
  <%= link_to "New todo", new_todo_path, data: { turbo_frame: dom_id(Todo.new) }, class: "btn btn-success" %>

  <hr>

  <div id="todos">
    <%= turbo_frame_tag Todo.new %>
    
    <%= turbo_frame_tag "todos" do %>
      <%= render @todos %>
    <% end %>
  </div>
  
